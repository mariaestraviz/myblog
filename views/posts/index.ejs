
<% for (var i in posts) { %>
  <div class="post">
    <div class="page-header">
      <h2>
        <a href='/posts/<%= posts[i].id %>' class='titlelink'> <%= posts[i].title %> </a>

        <% var fav=false%> 

        <% if (session.user) {%> 

            <% for (var j in posts[i].favourites){ %>
                <% if (posts[i].favourites[j].userId == session.user.id && posts[i].favourites[j].postId == posts[i].id) {%>
                    <% fav=true%> 
                <% } %>
            <% } %>

            <% if (fav) {%>

              <form  method='post' action='/users/<%= session.user.id %>/favourites/<%= posts[i].id %>' >
                   
                   <input type='hidden' name='_method' value='delete'>
                   
                   <input type="image" src="/images/estrella2.png"
                    onclick="this.form._method.value='delete'; this.form.submit()" />

              </form>
                          
            <% } else{ %>
                
                <form   method='post' action='/users/<%= session.user.id %>/favourites/<%= posts[i].id %>' >

                    <input type='hidden' name='_method' value='put'>
                    

                    <input type="image" src="/images/estrella1.png" onclick="this.fav=true; this.form.submit()" />

                </form>


                  <% } %>
        
        <% } %>

        <small>por <em> <%= posts[i].author && posts[i].author.name || "Sin autor" %> </em></small>
      </h2>

     <em> <%= posts[i].updatedAt.toLocaleDateString() %></em>
     
     <h7><em>Este post tiene: <%= posts[i].comments.length %> comentarios</em></h7> 
     
   </div>
      
     <p>
        <%= posts[i].body.slice(0,1000) %> ... 
     </p>

     <footer class>

      <% if (session.user && session.user.id == posts[i].authorId) {%>

        <% var form_name = 'fpi' + i; %>

        <form method='post' action='/posts/<%= posts[i].id %>'
              name='<%= form_name %>'>

          <input type='hidden' name='_method' value='delete'>

          <a class='btn btn-mini btn-info' href="/posts/<%= posts[i].id %>/edit"> 
             <i class='icon-edit icon-white'></i> Editar&raquo;</a> 

          <a class='btn btn-mini btn-danger' href="" 
             onclick="return confirmarSubmit('Â¿Seguro que desea borrar el post?', '<%= form_name %>')"> 
             <i class='icon-trash icon-white'></i> Borrar &raquo;</a>  
        </form>

      <% } %>

     </footer>
  </div>
<%  }; %>

<footer>
  <nav>
    <a href="/posts/new"> <i class='icon-plus-sign'></i> Crear nuevo Post </a>
  </nav>
</footer>