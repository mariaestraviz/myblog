<header>
  <h3> ALL POSTS </h3>
  <link rel="stylesheet" type="text/css" href="./stylesheets/myStyle.css">
</header>

<% for (var i in posts) { %>
  <article>
     <header>
        <h3>
          <a href='/posts/<%= posts[i].id %>' class='titlelink'> <%= posts[i].title %> </a>
        </h3>
     </header>
     
     <p>
        <%= posts[i].body.slice(0,300) %> ...
     </p>

     <footer>
        <form method='post' action='/posts/<%= posts[i].id %>'>
          <input type='hidden' name='_method' value='delete'>
          <a href="/posts/<%= posts[i].id %>/edit"> Editar </a>
          <p><a href="" onclick="submit();return false"> Borrar </a></p>
        </form>
     </footer>
  </article>

<% }; %>
<footer>
  <nav>
    <a href="/posts/new"> CREAR UN NUEVO POST </a>
  </nav>
</footer>