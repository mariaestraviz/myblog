
<div class="post">
    <div class="page-header">
      <h2>
        <%= post.title %>
        <% if (session.user) {%> 

        <form class='pull-right'
          method='post' 
          action='/users/<%= session.user.id%>/favourites/<%= post.id%>'>

          <input type='hidden' name='_method' value='put'>
          <input type='hidden' name='best' value=1>

          <input type="image" src="/images/estrella0.png" 
                    onclick="this.form._method.value='delete'; this.form.submit()" />

          <input type="image" src="/images/estrella1.png" 
                    onclick="this.form.best.value=5; this.form.submit()" />
      </form>
    <% } %>

        <small>por <em> <%= post.author && post.author.name || "Sin autor" %> </em></small>
      </h2>

     <em> <%= post.updatedAt.toLocaleDateString() %></em>
   </div>

   <p><%- escapeText(post.body) %></p>

   <% if (session.user && session.user.id == post.authorId) {%>  
     <a href="/posts/<%= post.id %>/edit"> Editar </a>
   <% } %>
</div>

<hr />
  <%- include ../attachments/index.ejs %>
<hr />
  <%- include ../comments/index.ejs %>
<hr />

<% if (session.user) { %>
   <blockquote>
      <%- include ../comments/new.ejs %> 
   </blockquote>

   <hr />
<% } %>

